{
  "editorconfig": true,
  "semi": false,
  "importOrderSeparation": true,
  "importOrder": [
    "^Theme/(.*)$",
    "^Components/(.*)$",
    "^Layouts/(.*)$",
    "^Providers/(.*)$",
    "^Atoms/(.*)$",
    "^Assets/(.*)$",
    "^Metadata/(.*)$",
    "^Locale/(.*)$",

    "^GraphQL/(.*)$",
    "^Queries/(.*)$",
    "^Services/(.*)$",
    "^Modules/(.*)$",

    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators"],
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-jsdoc"]
}
